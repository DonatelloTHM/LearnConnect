        <img class="thumbnailphoto" src="https://fertilitynetworkuk.org/wp-content/uploads/2017/01/Facebook-no-profile-picture-icon-620x389.jpg" alt="Avatar">
  <% end%>
    
    
    <main>
    <%= yield %>
    </main>
  </body>
